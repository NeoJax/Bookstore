extends base.pug

block content
  header
    div(class="ui menu")
      if access !== 'visitor'
        a(class="item" href="/") Search Pages
      if access === 'visitor'
        a(class="item" href="/login") Log In Page
      if access === 'visitor'
        a(class="item" href="/signup") Sign Up Page
      if access !== 'visitor'
        a(class="active item" href="/user") User Page
      if access === 'superadmin'
        a(class="item admin" href="/admin") Admin Page
      else if access === 'admin'
        a(class="item admin" href="/admin") Admin Page
      if access !== 'visitor'
        form.logout(action='/logout', method='POST')
          input(type='submit', class="item" value="Log Out")
  h1(class="title") User Page
  div.users(class="ui centered grid")
    each user in users
      div.userrow(class="row")
        span.text #{user.username}
        if access === superadmin
          button #{user.password}
    
