doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
		link(rel='stylesheet',href='/public/styles.css')
		link(rel="stylesheet" type="text/css" href="semantic/dist/semantic.min.css")
		script(src="semantic/dist/semantic.min.js")
		title BookStore - #{title}
		header
			div(class="ui menu")
				if access !== 'visitor'
					a(class="item" href="/") Search Pages
				else if access === undefined
					a(class="item" href="/") Search Pages
				if access === 'visitor'
					a(class="item" href="/login") Login Page
				else if access === undefined
					a(class="item" href="/login") Login Page
				if access === 'visitor'
					a(class="item" href="/signup") Sign Up Page
				else if access === undefined
					a(class="item" href="/signup") Sign Up Page
				if access !== 'visitor'
					a(class="item" href="/user") User Page
				else if access === undefined
					a(class="item" href="/user") User Page
				if access === 'superadmin'
					a(class="item admin" href="/admin") Admin Page
				else if access === 'admin'
					a(class="item admin" href="/admin") Admin Page
				if access !== 'visitor'
					form.logout(action='/logout', method='POST')
						input(type='submit', class="item" value="Logout")
		block content
			
